<table class="table table-striped table-hover table-bordered">
         <thead>
                 <tr>
                     <th>Name</th>
                     
                    
                     <th>Price</th>
                     
                    
                     <th>quantity</th>
                     
                    <th>subtotal</th>
                    
                   
                 </tr>
           </thead>
          <tbody>
                <% @order_items.each do |item| %>

                <tr>
                <td><%= item.product.name  %></td>
                 <td><%=  item.product.price%></td>
                 
                <%= form_for item do |f| %>

                <%= f.hidden_field :product_id,:value => item.product.id %>


  <td><%= f.text_field :quantity ,style:"border:none"%></td>
<!--<%= f.submit "Update Card"%> -->




<% end %>
<td><%= item.total %></td>

</tr>

<% end %>
</tbody>
</table>

<center style="float:right"><h3>Total :<%= current_order.subtotal1 %></h3></center>