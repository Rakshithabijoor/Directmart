
<%= form_with(model: @feedback) do |form| %>
  <% if @feedback.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @feedback.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :feedback, style: "display: block" %>
    <%= form.text_field :feedback,class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rating, style: "display: block" %>
    <%= form.text_field :rating ,class:"form-control"%>
  </div>
 <div class="form-group">
    <%= form.hidden_field :product_id, :value => @prid %>
  </div> 
  
  <div class="form-group">
    <%= form.hidden_field :user_id, :value => current_user.id %>
  </div> 
  <div>
    <%= form.submit  class:"btn btn-default rak9" %>
  </div>
<% end %>
