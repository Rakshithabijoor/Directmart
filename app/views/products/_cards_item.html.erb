<h1>Cards#show</h1>
<p>Find me in app/views/cards/show.html.erb</p>


<% @order_items.each do |item| %>
<h3><%= item.product.name %></h3>
<h3><%= item.product.price %></h3>


<%= form_for item,remote: true do |f| %>
<%= f.hidden_field :product_id,:value => item.product.id %>
<%= f.text_field :quantity %>
<!--<%= f.submit "Update Card"%> -->
<%= link_to "remove", order_item_path(item),method: :delete,remote: true %>



<% end %>
<h2>subtotal:<%= item.total %></h2>

<% end %>
<h3>your cart has subtotal of <%= current_order.subtotal %></h3>