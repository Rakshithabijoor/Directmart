

<div class="jumbotron">
<h6 class="display-4"><small>Id:&nbsp;<%= @product.id %></small></h6>
  <h1 class="display-4"> <%= @product.name %></h1>
  <p class="lead"> <%= @product.description %></p>
  <hr class="my-4">
 
 <span> <b>Price:</b> <%= @product.price %>.00</span>&nbsp;&nbsp;
  <span> <b>Stock:</b> <%= @product.stock %></span>
  <div><b>Added_at:</b><%= @product.created_at %></div>
  <div><b>Updated_at</b><%= @product.updated_at %></div>
</div>

<%= link_to "Edit", edit_product_path(@product),class:"btn btn-secondary" %> 
<%= link_to "Back", product_path,class:"btn btn-dark" %>

  
  







